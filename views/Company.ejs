<%- include('partials/header') -%>

<style>
    .this{
        padding-left: 100px;
        padding-right: 100px;
        padding-top: 100px;
    }
    label{
        font-family: 'Oswald', sans-serif;
        color: black;
        font-size: larger;
    }
    option{
        background-color: lightblue;
        padding: 15px;
    }
    select{
        padding: 15px;
        text-align: center;
        font-size: larger;
        background-color: transparent;
        color: black;
        border: none;
        outline: none;
    }
    img {
        border-radius: 4px;
        padding: 5px;
        width: 100px;
        float: left;
        }
</style>

<label for="Result of search">Choose a filter:</label>
<select name="sort" id="sort" onclick="yekar()">
    <option disabled selected>-- select sorting --</option>
    <option value="l2h" >Price: Low to High</option>
    <option value="h2l">Price: High to Low</option>
    <option value="et">Earliest Time</option>
    <option value="ed">Earliest Dates</option>
</select>

<div id="L2H">
    <% function compare1( a, b ) { %>
        <% if ( a.cost.Economy < b.cost.Economy ){ %>
        <%	return -1; %>
        <% } if ( a.cost.Economy > b.cost.Economy ){ %>
        <%	return 1; %>
        <% } %>
        <% return 0; %>
    <% } %>

    <% var x = foundtrip %>
    <% x.sort(compare1) %>

    <div class="row1 text-center this" style="display: flex; flex-wrap: wrap;">
        <% x.forEach(function(a){ %>
            <div class="col-md-3 col col-sm-6" >
                <div class="card">
                    <h2><%= compName %></h2>
                    <div class="image">
                        <img src="<%= a.company.logo %>" >
                    </div>
                    <div class="card-inner">
                        <div class="header" style="padding-top: 20px; padding-bottom: 20px; ">
                            <h3><%= a.departure %>-<%= a.destination %></h3>
                        </div>
                        <div>
                            <h3>Cost: <i class="fas fa-rupee-sign"></i><%= a.cost.Economy %></h3>
                        </div>
                        <div style="border: 1px solid black; ">
                            Timings: 
                            <br>
                            <h4>Departure on <%= a.arrivalTime %>,  <%= a.arrivalDate %></h4>
                            <h4>Arrival on <%= a.leavingTime %>, <%= a.leavingDate %></h4>
                        </div>
                    </div>
                </div>
            </div> 
        <% }); %>
    </div>
</div>

<div id="H2L">
    <% function compare1( a, b ) { %>
        <% if ( a.cost.Economy < b.cost.Economy ){ %>
        <%	return -1; %>
        <% } if ( a.cost.Economy > b.cost.Economy ){ %>
        <%	return 1; %>
        <% } %>
        <% return 0; %>
    <% } %>

    <% var x = foundtrip %>
    <% x.sort(compare1) %>
    <% x.reverse(); %>

    <div class="row1 text-center this" style="display: flex; flex-wrap: wrap;">
        <% x.forEach(function(a){ %>
            <div class="col-md-3 col col-sm-6" >
